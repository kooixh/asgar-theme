{{! This is the post loop - each post will be output using this markup }}
{{! Featured posts}}
<section class="posts">
    {{#foreach posts}}
    {{#if featured}}
    <article class="post featured-post">
        <div class="row">
            <div class="five columns">
                <header class="entry-header">
                    <p class="entry-author">
                        {{#primary_author}}
                        By <a href="{{url}}">{{name}}</a>
                        {{/primary_author}}
                    </p>
                    <h2 class="entry-title">
                        <a href="{{url}}" title="{{{title}}}">{{{title}}}</a>
                    </h2>
                    {{#if feature_image}}
                      <a class="" href="{{url}}">
                          {{!-- This is a responsive image, it loads different sizes depending on device
                          https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                          <img class="post-card-image"
                              srcset="{{img_url feature_image size="s"}} 300w,
                                      {{img_url feature_image size="m"}} 600w,
                                      {{img_url feature_image size="l"}} 1000w,
                                      {{img_url feature_image size="xl"}} 2000w"
                              sizes="(max-width: 1000px) 400px, 700px"
                              loading="lazy"
                              src="{{img_url feature_image size="m"}}"
                              alt="{{title}}"
                          />
                      </a>
                      <br/>
                    {{/if}}
                    <time class="entry-date"
                        datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                </header>
            </div>
            <div class="offset-by-one six columns u-pull-right">
                <section class="entry-content">
                    <p class="entry-tags">{{tags prefix="On: " limit="5"}}</p>
                    <p>{{excerpt words="50"}}...</p>
                    <p>
                        <a class="continue-reading" href="{{url}}">Continue reading &raquo;</a>
                    </p>
                </section>
            </div>
        </div>
    </article>
    {{/if}}
    {{/foreach}}

    {{! Non-featured posts}}
    {{#foreach posts}}
    {{#unless featured}}
    <article class="post">
        <div class="row">
            <div class="five columns">
                <header class="entry-header">
                    <p class="entry-author">
                        {{#primary_author}}
                        By <a href="{{url}}">{{name}}</a>
                        {{/primary_author}}
                        <time class="entry-date"
                            datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}
                        </time>
                    </p>
                    <h2 class="entry-title">
                        <a href="{{url}}" title="{{{title}}}">{{{title}}}</a>

                    </h2>
                    {{#if feature_image}}
                      <a class="" href="{{url}}">
                          <img class="post-card-image"
                              srcset="{{img_url feature_image size="s"}} 300w,
                                      {{img_url feature_image size="m"}} 600w,
                                      {{img_url feature_image size="l"}} 1000w,
                                      {{img_url feature_image size="xl"}} 2000w"
                              loading="lazy"
                              src="{{img_url feature_image size="s"}}"
                              alt="{{title}}"
                          />
                      </a>
                    {{/if}}
                </header>
            </div>
            <div class="offset-by-one six columns u-pull-right">
                <section class="entry-content">
                    <p class="entry-tags">{{tags prefix="On: " limit="5"}}</p>
                    <p>{{excerpt words="50"}}...</p>
                    <p>
                        <a class="continue-reading" href="{{url}}">Continue reading &raquo;</a>
                    </p>
                </section>
            </div>
        </div>
    </article>
    {{/unless}}
    {{/foreach}}
</section>

{{! Previous/next page links - displayed on every page }}
<section class="blog-navigation">
    {{pagination}}
</section>
